<%- include('../partials/header') %>

<main>
  <div class="sections">
    <div class="sections-header">
      <h2>Faculty Members</h2>
      <div class="sort-options">
        <span>Sort by:</span>
        <a href="/faculty?sort=name"
           class="<%= currentSort === 'name' ? 'active' : '' %>">
          Name
        </a>
        <a href="/faculty?sort=title"
           class="<%= currentSort === 'title' ? 'active' : '' %>">
          Title
        </a>
        <a href="/faculty?sort=department"
           class="<%= currentSort === 'department' ? 'active' : '' %>">
          Department
        </a>
      </div>
    </div>
    <div class="section-list">
      <% faculty.forEach(member => { %>
        <div class="section-card">
          <h3>
            <a href="/faculty/<%= member.id %>"><%= member.name %></a>
          </h3>
          <div class="section-professor">
            <strong>Department:</strong> <%= member.department %>
          </div>
          <div class="section-room">
            <strong>Title:</strong> <%= member.title %>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

</main>

<%- include('../partials/footer') %>
